{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NOTION_API_KEY",
    "NOTION_DATABASE_ID",
    "CLOUDINARY_CLIENT_API",
    "CLOUDINARY_CLIENT_NAME",
    "CLOUDINARY_CLIENT_SECRET",
    "DATABASE_URL",
    "ADMIN_PASSWORD"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "start": {},
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}
